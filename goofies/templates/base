<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf8">
        <title>
            {% block title %}{% endblock %}
            {{- ' - ' if self.title() else '' -}}
            {{ config.SITE_NAME }}
            {%- block site_description -%}
            {{ ' - ' + config.SITE_DESCRIPTION if config.SITE_DESCRIPTION else '' }}
            {%- endblock %}
        </title>
        {%- block head %}{% endblock %}
    </head>
    <body>
        {%- block header %}
        <h1>
            <a href="{{ url_for('index') }}">{{ config.SITE_NAME }}</a>
            {{- self.site_description() }}
        </h1>
        {% include 'menu.html' %}
        {%- if self.title() %}
        <h3>{{ self.title() }}</h3>
        {%- endif %}
        {%- endblock %}
        {%- with messages = get_flashed_messages() %}
        {%- if messages %}
        <ul class="messages">
        {%- for message in messages %}
            <li>{{ message }}</li>
        {%- endfor %}
        </ul>
        {%- endif %}
        {%- endwith %}
        {%- block content %}{% endblock -%}
        {%- block footer %}{% endblock %}
    </body>
</html>
